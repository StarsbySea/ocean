    "url": "https://www.holtek.com/documents/10179/108746/HT-IDE3KV805_Setup.zip/9f0f1311-eed7-4825-8cb9-37531bde38f7#/dl.zip",
    "hash": "F322BD4E23715D5320FC4E13752CA39753BAF0072F8E7C090DD23B2843D0FE39",
    "installer": {
        "script": "Get-Item \"$dir\\HT-IDE3K*Setup.exe\" | Expand-InnoArchive -Destination \"$dir\" -Removal"
    },
    "shortcuts": [
        [
            "BIN\\Bin2asm.exe",
            "HT-IDE3000\\BinToAsm"
        ],
        [
            "BIN\\hdiag32.exe",
            "HT-IDE3000\\Diagnosis"
        ],
        [
            "BIN\\HT-IDE3000.exe",
            "HT-IDE3000\\HT-IDE3000"
        ],
        [
            "BIN\\HLIBW32.exe",
            "HT-IDE3000\\Library Manager"
        ],
        [
            "BIN\\Option Viewer.exe",
            "HT-IDE3000\\Option Viewer"
        ],
        [
            "DOC\\HT-IDE3000UsersGuide(1252).pdf",
            "HT-IDE3000\\HT-IDE3000 User's guide"
        ]

    ],
    "checkver": {
        "url": "http://www.holtek.com/ice",
        "regex": "href=\"\/(?<pathname>documents\/\\d+\/\\d+\/HT-IDE3KV.+?)\">.+?HT-IDE3000 V(?<version>\\d+.\\d+)"
    },
    "autoupdate": {
        "url": "https://www.holtek.com/$matchPathname#/dl.zip"
    },
    "notes": [
        "You will need to install the device drivers manually, they are available at:",
        "$dir\\Driver"
    ]
}
